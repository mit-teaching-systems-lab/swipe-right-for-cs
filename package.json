{
  "name": "swipe-right-for-cs",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": "6.11.x"
  },
  "scripts": {
    "start": "yarn run dev",
    "test": "yarn run lint && cd client && yarn run test",
    "heroku-prebuild": "yarn install && cd client && YARN_PRODUCTION=false yarn install --frozen-lockfile",
    "heroku-postbuild": "cd client && yarn run build",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "server": "node server/index.js",
    "client": "cd client && yarn run start",
    "lint": "eslint --ext js -c server/.eslintrc server"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "express": "^4.16.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "eslint": "^4.8.0",
    "eslint-plugin-node": "^5.2.0"
  }
}
